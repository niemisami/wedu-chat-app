<resources>


    <style name="AppTheme" parent="AppTheme.Base"/>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/secondary_text</item>
        <item name="android:textColorSecondary">@color/ambient_white</item>
        <item name="android:textColor">@color/primary</item>
        <item name="actionMenuTextColor">@color/primary</item>
    </style>

    <style name="ProgressBarStyle" parent="@android:style/Widget.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorAccent">@color/ambient_white</item>
        <item name="android:indeterminate">true</item>
    </style>

</resources>
